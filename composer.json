{
    "name": "plakhin/laravel-package-skeleton",
    "description": "A skeleton repository for my packages",
    "keywords": ["laravel", "php", "package", "skeleton"],
    "license": "MIT",
    "authors": [
        {
            "name": "Stanislav Plakhin",
            "email": "plakhin@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/contracts": "^11.0|^12.0"
    },
    "require-dev": {
        "larastan/larastan": "^3.7",
        "laravel/pint": "^1.25.1",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^4.1",
        "pestphp/pest-plugin-laravel": "^4.0",
        "pestphp/pest-plugin-type-coverage": "^4.0.2",
        "phpstan/extension-installer": "^1.4.3",
        "phpstan/phpstan-deprecation-rules": "^2.0.3",
        "phpstan/phpstan-phpunit": "^2.0.7",
        "rector/rector": "^2.2.7"
    },
    "autoload": {
        "psr-4": {
            "Plakhin\\LPSkeleton\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Plakhin\\LPSkeleton\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Plakhin\\LPSkeleton\\LPSkeletonServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "lint": "pint --parallel",
        "refactor": "rector",
        "test:lint": "pint --test --parallel",
        "test:refactor": "rector --dry-run",
        "test:types": [
            "phpstan analyse --ansi",
            "pest --colors=always --type-coverage --min=100"
        ],
        "test:unit": "pest --colors=always --coverage --parallel --min=100",
        "test": [
            "@test:lint",
            "@test:refactor",
            "@test:types",
            "@test:unit"
        ]
    }
}
